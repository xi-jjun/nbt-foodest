<section class="login-page">
  <h2>O파티 맛집리뷰쌓기</h2>

  <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <%= f.label :email, class: 'p-0 m-0' %><br/>
        <%= f.email_field :email, class: 'p-1 mb-2', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="row">
        <%= f.label :password, class: 'p-0 m-0' %><br/>
        <%= f.password_field :password, class: 'p-1 mb-2', autocomplete: "current-password" %>
      </div>

      <div class="row actions mt-2">
        <%= f.submit "로그인", class: 'focus-btn' %>
      </div>
    <% end %>

    <div class="row actions mt-2">
      <%= link_to "회원가입 하러가기", new_registration_path(resource_name), class: 'non-focus-btn' %><br/>
    </div>
  </div>
</section>

