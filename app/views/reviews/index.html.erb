<script>
	const swiperElement = document.querySelector(".review-item-swiper");
	Object.assign(swiperElement, {
		grabCursor: true,
		effect: "creative",
		creativeEffect: {
			prev: {
				shadow: true,
				translate: [0, 0, -400],
			},
			next: {
				translate: ["100%", 0, 0],
			},
		},
	});
	swiperElement.initialize();
</script>
